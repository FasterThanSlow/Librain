<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greenkeycompany.librain">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".campaign.CampaignGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mainmenu.MainMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".campaign.CampaignMenuActivity"
            android:parentActivityName=".mainmenu.MainMenuActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greenkeycompany.librain.mainmenu.MainMenuActivity" />
        </activity>
        <activity
            android:name=".rating.RatingGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".training.TrainingMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".training.TrainingGameActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".advice.view.AdviceActivity"
            android:parentActivityName=".mainmenu.MainMenuActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.greenkeycompany.librain.mainmenu.MainMenuActivity" />
        </activity>
    </application>

</manifest>