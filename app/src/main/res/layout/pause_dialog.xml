<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pause_dialog_levels_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/pause_dialog_levels"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/pause_menu_levels"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/pause_dialog_restart_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/pause_dialog_restart"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/pause_menu_restart"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pause_dialog_continue_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/pause_dialog_play"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/pause_menu_continue"
            android:textSize="20sp"
            android:textColor="#000"

            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>