<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="16dp"
        android:paddingBottom="16dp"

        android:layout_marginBottom="16dp"

        android:background="@color/campaign_title_background_color"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"

            android:text="@string/pause_dialog_title"
            android:textSize="24sp"
            android:textColor="@color/pause_dialog_title_text_color"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="14sp"
        android:textColor="@color/pause_dialog_message_text_color"
        android:text="@string/pause_dialog_message"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pause_dialog_levels_image_view"
            android:layout_width="0dp"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"

            android:gravity="center"
            android:background="@drawable/pause_dialog_levels_shape"
            android:src="@drawable/pause_dialog_levels_icon"

            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pause_dialog_continue_text_view"
            android:layout_width="0dp"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"

            android:background="@drawable/pause_dialog_levels_shape"
            android:src="@drawable/pause_dialog_continue_icon"

            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>