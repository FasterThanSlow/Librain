<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.greenkeycompany.librain.training.menu.fragment.TrainingRoundsFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/first_round_card_view"

        android:layout_width="300dp"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/second_round_card_view"
        app:layout_constraintVertical_chainStyle="packed">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"

            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <CheckBox
                android:id="@+id/first_round_check_box"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/training_settings_round_1_title"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/training_settings_round_1_description"

                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/second_round_card_view"

        android:layout_width="300dp"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"

        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"

        app:layout_constraintTop_toBottomOf="@+id/first_round_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/third_round_card_view">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"

            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <CheckBox
                android:id="@+id/second_round_check_box"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/game_round_2_title"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/training_settings_round_2_description"

                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/third_round_card_view"

        android:layout_width="300dp"
        android:layout_height="wrap_content"

        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"

        app:layout_constraintTop_toBottomOf="@+id/second_round_card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/previous_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"

            android:paddingRight="16dp"
            android:paddingStart="16dp">

            <CheckBox
                android:id="@+id/third_round_check_box"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/training_settings_round_3_title"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:background="@color/colorLine" />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/training_settings_round_3_description"

                    android:textColor="@color/colorTextPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/previous_button"

        android:textColor="@color/colorWhite"
        android:text="@string/training_settings_previous"

        android:theme="@style/GreenButton"

        android:layout_marginBottom="32dp"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/next_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/next_button"
        android:textColor="@color/colorWhite"
        android:text="@string/training_settings_save"

        android:theme="@style/GreenButton"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/previous_button"
        app:layout_constraintLeft_toRightOf="@+id/previous_button" />
</android.support.constraint.ConstraintLayout>
