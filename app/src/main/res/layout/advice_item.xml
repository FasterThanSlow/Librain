<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"

    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"

    app:cardBackgroundColor="@color/main_card_background_color"
    app:cardCornerRadius="2dp"
    app:cardElevation="4dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:paddingEnd="16dp"
        android:paddingLeft="16dp"

        android:paddingRight="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/item_title_text_view"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_card_text_color"

            tools:text="Title"

            android:layout_marginTop="16dp"

            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/item_favorite_image_view"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/advice_item_favorite_icon"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_title_text_view"
            app:layout_constraintBottom_toBottomOf="@+id/item_title_text_view" />

        <View
            android:id="@+id/item_line_view"

            android:layout_width="0dp"
            android:layout_height="1dp"

            android:background="@color/main_card_line_color"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_title_text_view"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/item_message_text_view"

            tools:text="@string/main_menu_start_rating_description"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"

            android:textColor="@color/main_card_text_color"
            android:textSize="12sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_line_view" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
