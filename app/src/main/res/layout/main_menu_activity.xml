<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fillViewport="true"
    android:paddingBottom="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="@color/background_color"
        android:orientation="vertical"
        tools:context="com.greenkeycompany.librain.mainmenu.MainMenuActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/main_card_background_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:layout_constraintHorizontal_bias="0.49"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingLeft="12dp"

                android:paddingRight="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"

                    android:layout_marginRight="12dp"
                    android:src="@drawable/main_menu_cup" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="12dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/main_menu_start_campaign_title"
                            android:textColor="@color/main_card_text_color"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/main_stars_count_text_view"

                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"

                            android:layout_gravity="center_vertical"
                            android:drawableLeft="@drawable/rating_bar_star_completed"

                            android:drawablePadding="1dp"

                            android:drawableStart="@drawable/rating_bar_star_completed"
                            android:textColor="@color/main_card_text_color"

                            android:textSize="14sp"
                            tools:text="5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/main_card_line_color" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/main_menu_start_campaign_description"

                        android:textColor="@color/main_card_text_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/main_start_campaign_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"

                        android:background="@color/green_button_color"

                        android:clickable="true"
                        android:gravity="center"

                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="@string/main_menu_play"

                        android:textAllCaps="true"
                        android:textColor="@color/green_button_text_color" />


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/main_card_background_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:paddingEnd="12dp"
                android:paddingLeft="12dp"

                android:paddingRight="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"

                    android:layout_marginRight="12dp"
                    android:src="@drawable/main_menu_racing" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="12dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_menu_start_rating_title"
                            android:textColor="@color/main_card_text_color"

                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/main_card_line_color" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/main_menu_start_rating_description"

                        android:textColor="@color/main_card_text_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/main_start_rating_game_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"

                        android:background="@color/campaign_item_premium_disabled_stroke_color"

                        android:clickable="true"
                        android:gravity="center"

                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="@string/main_menu_activate"

                        android:textAllCaps="true"
                        android:textColor="@color/green_button_text_color" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/main_card_background_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardView3"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:paddingEnd="12dp"
                android:paddingLeft="12dp"

                android:paddingRight="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"

                    android:layout_marginRight="12dp"
                    android:src="@drawable/main_menu_target" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="12dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_menu_start_training_title"

                            android:textColor="@color/main_card_text_color"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/main_card_line_color" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/main_menu_start_training_description"

                        android:textColor="@color/main_card_text_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/main_start_training_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"

                        android:background="@color/green_button_color"

                        android:clickable="true"
                        android:gravity="center"

                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="@string/main_menu_play"

                        android:textAllCaps="true"
                        android:textColor="@color/green_button_text_color" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cart_view_sdfsdfad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            card_view:cardBackgroundColor="@color/main_card_background_color"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="4dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/cardView4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal"

                android:paddingEnd="12dp"
                android:paddingLeft="12dp"

                android:paddingRight="12dp"
                android:paddingStart="12dp">

                <ImageView
                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"

                    android:layout_marginRight="12dp"
                    android:src="@drawable/main_menu_agenda" />

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:paddingBottom="12dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="2dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_menu_start_advice_title"
                            android:textColor="@color/main_card_text_color"

                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"

                        android:layout_height="1dp"
                        android:background="@color/main_card_line_color" />

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="@string/main_menu_start_advice_description"

                        android:textColor="@color/main_card_text_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/main_menu_advice_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"

                        android:background="@color/green_button_color"

                        android:clickable="true"
                        android:gravity="center"

                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:text="@string/main_menu_play"

                        android:textAllCaps="true"
                        android:textColor="@color/green_button_text_color" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</ScrollView>