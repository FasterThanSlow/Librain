<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="16dp"
        android:paddingBottom="16dp"

        android:layout_marginBottom="16dp"

        android:background="?attr/colorPrimary"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"

            android:text="@string/rating_title"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:textSize="14sp"

        android:text="@string/raiting_result_dialog_description"
        android:textColor="@color/colorTextPrimary"
        android:textStyle="italic"
        android:gravity="center_horizontal"

        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="14sp"

        android:text="@string/raiting_result_dialog_current_result"
        android:textColor="@color/colorTextPrimary"

        android:gravity="center_horizontal"

        android:paddingLeft="24dp"
        android:layout_marginBottom="4dp"
        android:paddingRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="14sp"

        android:text="@string/raiting_result_dialog_best_result"
        android:textColor="@color/colorTextPrimary"

        android:gravity="center_horizontal"

        android:paddingLeft="24dp"
        android:paddingRight="24dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"

        android:layout_marginTop="24dp"
        android:layout_marginBottom="10dp"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pause_dialog_levels_image_view"
            android:layout_width="0dp"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"

            android:gravity="center"
            android:background="@drawable/dialog_orange_background_shape"
            android:src="@drawable/exit_game_icon"

            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pause_dialog_restart_image_view"
            android:layout_width="0dp"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"

            android:background="@drawable/dialog_orange_background_shape"
            android:src="@drawable/result_dialog_levels_icon"

            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pause_dialog_continue_image_view"
            android:layout_width="0dp"
            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"

            android:background="@drawable/dialog_orange_background_shape"
            android:src="@drawable/restart_raiting_icon"

            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>