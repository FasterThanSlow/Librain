<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"

    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/campaign_item_background_view"
        android:orientation="vertical"

        android:clickable="true"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/campaign_item_level_number"

            android:background="@drawable/campaign_item_circle"

            tools:text="1"

            android:textSize="26sp"
            android:textColor="@color/campaign_item_level_number_text_color"
            android:gravity="center"

            android:layout_width="@dimen/campaign_item_size"
            android:layout_height="@dimen/campaign_item_size" />

        <com.greenkey.librain.view.RatingBar
            android:id="@+id/campaign_item_rating_bar"

            app:starsSrc="@drawable/campaign_item_star"
            app:starsCompletedSrc="@drawable/campaign_item_star_completed"

            android:paddingTop="4dp"
            android:paddingBottom="4dp"

            android:gravity="center_horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>