<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"

    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"

    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_level_number"

        android:layout_width="@dimen/campaign_item_size"
        android:layout_height="@dimen/campaign_item_size"

        android:background="@drawable/campaign_item_circle"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"

        android:textSize="26sp"
        tools:text="1" />

    <com.greenkeycompany.librain.app.view.ratingbar.RatingBar
        android:id="@+id/item_rating_bar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"

        android:paddingBottom="4dp"
        android:paddingTop="4dp"

        app:starsCompletedSrc="@drawable/campaign_item_star_completed"
        app:starsSrc="@drawable/campaign_item_star" />
</LinearLayout>
