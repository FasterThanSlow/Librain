<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    android:background="@color/game_background_color"

    tools:context="com.greenkey.librain.GameActivity">

    <FrameLayout
        android:background="@color/campaign_title_background_color"

        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"

            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/level"
                android:textColor="@color/game_title_text_color"
                android:textSize="20sp"

                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                tools:text="4"

                android:id="@+id/level_number_text_view"

                android:textColor="@color/game_title_text_color"
                android:textSize="20sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.greenkey.librain.view.RatingBar
                android:id="@+id/stars"

                app:starsSrc="@drawable/game_rating_bar_star"
                app:starsCompletedSrc="@drawable/game_rating_bar_star_completed"
                app:starsSelectedSrc="@drawable/game_rating_bar_star_selected"

                app:progress="1"
                app:selectedIndex="1"

                android:gravity="center_vertical"

                android:layout_gravity="center_vertical"

                android:orientation="horizontal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/restart_image_view"

                android:layout_gravity="center_vertical"

                android:src="@drawable/game_restart_selector"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/pause_image_view"

                android:visibility="gone"

                android:padding="8dp"

                android:src="@drawable/game_pause_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.greenkey.librain.view.boardview.BoardView
            android:id="@+id/board_view"
            android:gravity="center"

            app:columnCount="4"
            app:rowCount="6"
            app:item_size="@dimen/game_tem_size"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.greenkey.librain.view.boardview.BoardView>

        <FrameLayout
            android:id="@+id/game_blackout_view"

            android:visibility="invisible"

            android:background="@color/game_background_blackout_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.greenkey.librain.view.distributorview.DistributorView
            android:id="@+id/hidden_stuff"

            android:visibility="invisible"

            android:layout_gravity="center"

            app:item_size="@dimen/game_tem_size"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/game_round_banner"

            android:orientation="vertical"

            android:layout_gravity="center"

            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/game_round_image_view"

                android:layout_gravity="center_horizontal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/game_round_title_text_view"
                tools:text="Round 1"
                android:textColor="#000"
                android:textSize="30sp"

                android:layout_gravity="center_horizontal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/game_round_description_text_view"
                tools:text="Round 1"
                android:textColor="#000"
                android:textSize="16sp"

                android:layout_gravity="center_horizontal"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <Button
            android:id="@+id/check_result_button"

            android:layout_gravity="center"

            android:text="@string/game_check_result"
            android:textColor="@color/green_button_text_color"

            android:theme="@style/GreenButton"

            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/game_bottom_blackout_view"

            android:visibility="invisible"

            android:background="@color/game_background_blackout_color"

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
