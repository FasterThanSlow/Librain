<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.greenkey.librain.MainMenuActivity">

    <TextView
        android:layout_centerInParent="true"

        android:text="ЗдарАва, Тестер, а нука, протести!"
        android:textSize="40sp"

        android:padding="16dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rowCountEditText"

        android:inputType="numberSigned"


        android:padding="16dp"

        android:hint="Рядов кол-во"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/columnCountEditText"

        android:padding="16dp"

        android:inputType="numberSigned"


        android:hint="Столбцов кол-во"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/itemsTypeCountEditText"

        android:padding="16dp"

        android:inputType="numberSigned"
        android:hint="Типы элементов кол-во (макс 3)"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/itemsCount"

        android:inputType="numberSigned"
        android:hint="Количество элементов (Подумай)"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/startBuuton"

        android:layout_marginTop="16dp"

        android:text="Старт"
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/gogo"

        android:layout_marginTop="16dp"

        android:text="Смотреть менюшку"
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
