<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/result_dialog_header"

        android:orientation="horizontal"

        android:paddingTop="16dp"
        android:paddingBottom="16dp"

        android:layout_marginBottom="24dp"

        android:background="@color/header_background_color"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"

            android:text="@string/result_dialog_title"
            android:textSize="28sp"
            android:textColor="@color/header_text_color"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.greenkey.librain.view.RatingBar
        android:id="@+id/result_dialog_rating_bar"

        android:gravity="center_horizontal"

        app:starsSrc="@drawable/result_dialog_star"
        app:starsCompletedSrc="@drawable/result_dialog_star_completed"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"

        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/result_dialog_levels_image_view"

            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"

            android:gravity="center"
            android:background="@drawable/dialog_background_shape"
            android:src="@drawable/result_dialog_levels_icon"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/result_dialog_restart_image_view"

            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:gravity="center"
            android:background="@drawable/dialog_background_shape"
            android:src="@drawable/result_dialog_restart_icon"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/result_dialog_next_image_view"

            android:clickable="true"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"

            android:gravity="center"

            android:background="@drawable/dialog_background_shape"
            android:src="@drawable/result_dialog_next_icon"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>