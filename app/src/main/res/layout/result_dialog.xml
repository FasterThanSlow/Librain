<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="24dp"
        android:paddingBottom="16dp"

        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/level"
            android:textSize="24sp"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/result_dialog_level_text_view"
            tools:text="4"
            android:textSize="24sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.greenkey.librain.RatingBar
        android:id="@+id/result_dialog_rating_bar"

        android:gravity="center_horizontal"

        app:starsSrc="@drawable/result_dialog_star"
        app:starsCompletedSrc="@drawable/result_dialog_star_completed"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/result_dialog_levels_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/pause_dialog_levels"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/pause_dialog_levels"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/result_dialog_restart_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/pause_dialog_restart"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/pause_dialog_restart"
            android:textSize="20sp"
            android:textColor="#000"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/result_dialog_next_text_view"

            android:clickable="true"

            android:drawableTop="@drawable/result_dialog_next"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:text="@string/result_dialog_next"
            android:textSize="20sp"
            android:textColor="#000"

            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>