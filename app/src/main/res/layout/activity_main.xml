<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    tools:context="com.greenkey.librain.MainActivity">

    <LinearLayout
        android:orientation="horizontal"

        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/level"
            android:textSize="16sp"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/level_number_text_view"

            tools:text="1"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <com.greenkey.librain.StarsContainer
            android:id="@+id/stars"

            android:orientation="horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/restartKnopka"

        android:text="Рестарт"

        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"

        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/knopka"

        android:text="Жми, как готов"

        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.greenkey.librain.reciverview.BoardView
        android:orientation="vertical"

        android:id="@+id/table_linear_layout"

        android:gravity="center"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.greenkey.librain.reciverview.BoardView>

    <com.greenkey.librain.distributorview.DistributorView
        android:id="@+id/distributorFrameLayout"

        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.greenkey.librain.distributorview.DistributorView>

</LinearLayout>
