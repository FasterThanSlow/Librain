<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"

    tools:context="com.greenkey.librain.MainActivity">

    <LinearLayout
        android:orientation="horizontal"

        android:background="#ffffff"

        android:paddingTop="8dp"

        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.greenkey.librain.view.RatingBar
            android:id="@+id/stars"

            android:layout_gravity="center_vertical"

            android:orientation="horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/restartKnopka"

            android:padding="8dp"

            android:src="@drawable/restart_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/pause"

            android:padding="8dp"

            android:src="@drawable/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"

        android:background="#ffffff"

        android:paddingBottom="8dp"

        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/state"
            android:textSize="16sp"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/state_text_view"
            tools:text="1 / 3"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <TextView
            android:text="@string/level"
            android:textSize="16sp"

            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/level_number_text_view"
            tools:text="4"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.greenkey.librain.view.boardview.BoardView
            android:id="@+id/board_view"
            android:background="#FFFFFF"
            android:gravity="center"

            app:columnCount="4"
            app:rowCount="5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.greenkey.librain.view.boardview.BoardView>

        <com.greenkey.librain.view.distributorview.DistributorView2
            android:id="@+id/hidden_stuff"
            android:background="@drawable/distributor_background"
            android:padding="5dp"

            android:layout_gravity="center"

            android:visibility="invisible"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>



    <LinearLayout
        android:orientation="vertical"

        android:background="#ffffff"

        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:id="@+id/confirm_text_view"
            android:clickable="true"

            android:visibility="gone"

            android:layout_gravity="center_horizontal"

            android:text="@string/confirm"
            android:textSize="20sp"

            android:background="@drawable/distributor_confirm_backround"

            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"

            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
