<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45">

            <shape android:shape="rectangle">
                <solid android:color="#c3c3c3"/>
                <stroke
                    android:color="#f00"
                    android:width="1dp" />
            </shape>

        </rotate>
    </item>

</layer-list>